print("Welcome to Secure OS")
print("The instal will now begin to run")
print("-----------------------------------")
textutils.slowPrint("Deleting Pre-existing files")
shell.run("delete","startup")
shell.run("delete","os")
shell.run("delete","uninstall")
shell.run("delete",".menu")
shell.run("delete",".back")
print("-----------------------------------")
sleep(1)
textutils.slowPrint("Installing New Files...")
shell.run("cp","disk/.menu",".menu")
shell.run("cp","disk/startupos","startup")
shell.run("cp","disk/os","os")
shell.run("cp","disk/os/*","os/*")
shell.run("cp","disk/User","User")
shell.run("cp","disk/.Pass",".Pass")
print("-----------------------------------")
disk.eject("top")
disk.eject("bottom")
disk.eject("left")
disk.eject("right")
disk.eject("back")
sleep(5)
os.reboot()
